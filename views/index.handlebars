<div class="col-md-4">
  <center>
  <a href="http://fontmeme.com/burger-king-font/"><img src="https://fontmeme.com/permalink/200507/131160001d6fa8d04005131b385ac6ad.png" alt="Burger King Font"></a>
  </center>

  <form class="col-md-12" action="/burger/add" method="POST">
    <div class="col-md-11 col-md-offset-1 text-center" style="margin-top:15px">
        <label for="burger" style="color: black; font-family: 'Comic Sans MS', cursive, sans-serif">Order Your Burger!</label>
        <input type="text" id="burger" name="user_burger" required>
        <input class="btn btn-warning btn-xs" type="submit" value= "Submit"></input>
    </div>
  </form>
</div>

<div class="col-md-4">
  
  <center>
  <a href="http://fontmeme.com/burger-king-font/"><img src="https://fontmeme.com/permalink/200507/095023296c424a13ad66c098a892cc70.png" alt="Burger King Font"></a>
  </center>

  <div class="col-md-12 text-center">
      {{#each burger}}
        {{#unless this.devoured}}
          <form class="col-md-12" action="/burger/update/{{this.id}}" method="POST">
          <div class="burger_name" style="font-size: 14pt; padding: 10px; color: black; font-family: 'Comic Sans MS', cursive, sans-serif" id="burger1">{{this.burger_name}}
          </div>
          <button class="btn btn-warning btn-xs" type="submit"><img src="https://media.giphy.com/media/AAfpHO80onDYk/giphy.gif" alt="" style="max-width: 50px" /></button>
          </form>
        {{/unless}}
      {{/each}}
  </div>
</div>

<div class="col-md-4">
  <center>
  <a href="http://fontmeme.com/burger-king-font/"><img src="https://fontmeme.com/permalink/200507/d62d6e517d62c4bab02046d5841a8e28.png" alt="Burger King Font"></a>
  </center>
  <div class="col-md-12 text-center">
    {{#each burger}}
      {{#if this.devoured}}
          <form class="col-md-12" action="/burger/delete/{{this.id}}" method="POST">
          <div class="burger_name" style="font-size: 14pt; padding: 10px; color: black; font-family: 'Comic Sans MS', cursive, sans-serif">{{this.burger_name}}
          </div>
            <button class="btn btn-warning btn-xs" type="submit"><img src="https://media.giphy.com/media/ToMjGplHPoYqSg7oACc/giphy.gif" alt="" style="max-width: 100px" /></button>
          </form>
      {{/if}}
    {{/each}}
  </div>
</div>